			  <MoveTaskList>TL_MILITARY_WALK</MoveTaskList>
			  <MoveIdleAnim>PU_SoldierPoleArm2_Idle1</MoveIdleAnim>
		</Logic>
		  <Display classname="ED::CBehaviorProps">
			  <Class>ED::CDisplayBehaviorMovement</Class>
		</Display>
	</Behavior>
	<Behavior>
		  <Logic classname="GGL::CSoldierBehaviorProps">
			  <Class>GGL::CSoldierBehavior</Class>

	        <BattleTaskList>TL_BATTLE_POLEARM</BattleTaskList>
	        <NormalAttackAnim1>PU_SoldierPoleArm2_Attack1</NormalAttackAnim1>
