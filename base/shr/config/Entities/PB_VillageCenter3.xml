<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<root>
	<Display classname="ED::CDisplayEntityProps">
		  <Class>ED::CDisplayBuilding</Class>
		  <Model>PB_VillageCenter3</Model>

	</Display>
	<Logic classname="GGL::CGLBuildingProps">
		  <Class>GGL::CBuilding</Class>
		  <AccessCategory>AccessCategoryBuilding</AccessCategory>
		  <NeedsPlayer>true</NeedsPlayer>
		  <ForceNoPlayer>false</ForceNoPlayer>
		  <Category>VillageCenter</Category>
		  <Category>DefendableBuilding</Category>
		  <MaxHealth>1400</MaxHealth>		
		  <ArmorClass>ArmorClassFortification</ArmorClass> 
		  <ArmorAmount>4</ArmorAmount>   
		  
		
  <!-- Armor -->
		<ModifyArmor>
			<Technology>T_LightBricks</Technology>
		</ModifyArmor>
		  <ModifyArmor>
		  	<Technology>T_Masonry</Technology>		  
		</ModifyArmor>     
		  		
		
  <!-- Exploration-->
		  <ModifyExploration>
        	<Technology>T_TownGuard</Technology>
        </ModifyExploration>

		<!-- Bonus -->
		<ModifyExploration>
			<Technology>T_SuperTechnology</Technology>
		</ModifyExploration>
		<ModifyArmor>
			<Technology>T_SuperTechnology</Technology>
		</ModifyArmor> 
		
        <BuildOn>XD_VillageCenter</BuildOn>
        <HideBase>true</HideBase>
        <Upgrade>
            <Category>VillageCenter</Category>
        </Upgrade>
		  <NumberOfAttractableSettlers>150</NumberOfAttractableSettlers>
		  <Exploration>40</Exploration>
        <ConstructionInfo>
            

      

      
