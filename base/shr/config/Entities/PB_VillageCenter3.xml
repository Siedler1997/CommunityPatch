         <LeavePos>
            <X>-500</X>
            <Y>-600</Y>
        </LeavePos>
        <ApproachPos>
            <X>-400</X>
            <Y>-600</Y>
        </ApproachPos>
		  <ApproachR>0</ApproachR>
        <DoorPos>
            <X>-400</X>
            <Y>180</Y>			
        </DoorPos>
        

    

    

    <!-- No need for build block bits because the XD_VillageCenter does that! Blocking, however, is now
         required both in the XD_VillageCenter and in the village centers themselves -->        
