<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<root>
	<Display classname="ED::CDisplayEntityProps">
		  <Class>ED::CDisplayBuilding</Class>
		  <Model>PB_Blacksmith1</Model>
	</Display>
	<Logic classname="GGL::CGLBuildingProps">
		  <Class>GGL::CBuilding</Class>
		  <AccessCategory>AccessCategoryBuilding</AccessCategory>
		  <NeedsPlayer>true</NeedsPlayer>
		  <ForceNoPlayer>false</ForceNoPlayer>
		  <UpgradeSite>ZB_UpgradeSiteBlacksmith1</UpgradeSite>
      <Category>Workplace</Category>
      <Category>DefendableBuilding</Category>  
		  <MaxHealth>1200</MaxHealth>
		  <ArmorClass>ArmorClassFortification</ArmorClass> 
		  <ArmorAmount>3</ArmorAmount> 
		  
		<!-- Armor -->
		<ModifyArmor>
			<Technology>T_LightBricks</Technology>
		</ModifyArmor>
		<ModifyArmor>
		  	<Technology>T_Masonry</Technology>		  
		</ModifyArmor>     
		   		
		<!-- Exploration-->
		<ModifyExploration>
        	<Technology>T_TownGuard</Technology>
        </ModifyExploration>

		<!-- Bonus -->
		<ModifyExploration>
			<Technology>T_SuperTechnology</Technology>
		</ModifyExploration>
		<ModifyArmor>
			<Technology>T_SuperTechnology</Technology>
		</ModifyArmor> 
		 
        <Worker>PU_Smith</Worker>
        <MaxWorkers>2</MaxWorkers>
        <InitialMaxWorkers>2</InitialMaxWorkers>
        <WorkTaskList>
            <Start>TL_SMITH_WORK_START</Start> 
            <Work>TL_SMITH_WORK</Work> 
        </WorkTaskList>
        <WorkTaskList>
            <Start>TL_SMITH_WORK1_START</Start> 
            <Work>TL_SMITH_WORK1</Work> 
        </WorkTaskList>
        <WorkTaskList>
            <Start>TL_SMITH_WORK_INSIDE_START</Start> 
            <Work>TL_SMITH_WORK_INSIDE</Work> 
        </WorkTaskList>
         <Upgrade>
            <Category>Blacksmith</Category>
            <Time>40.0</Time>  
            <Cost>
			    <Clay>100</Clay>
			    <Wood/>
				    <Stone>200</Stone>
				    <Gold/>
				    <Iron/>
				    <Sulfur/>
            </Cost>
            <Type>PB_Blacksmith2</Type>
        </Upgrade>
        <ConstructionInfo>
        	<Time>110</Time>
            <Cost>
			    <Clay>400</Clay>
			    <Wood>300</Wood>
				    <Stone>0</Stone>
				    <Gold/>
				    <Iron/>
				    <Sulfur/>
            </Cost>
           <BuilderSlot>
                <Position>
                    <X>300</X>
                    <Y>-500</Y>
                </Position>
                <Orientation>90</Orientation>
            </BuilderSlot>
           <BuilderSlot>
                <Position>
                    <X>-200</X>
                    <Y>-500</Y>
                </Position>
                <Orientation>90</Orientation>
            </BuilderSlot>
            <BuilderSlot>
                <Position>
                    <X>-600</X>
                    <Y>-200</Y>
                </Position>
                <Orientation>0</Orientation>
            </BuilderSlot>            
            <BuilderSlot>
                <Position>
                    <X>-600</X>
                    <Y>100</Y>
                </Position>
                <Orientation>0</Orientation>
            </BuilderSlot>             
            <ConstructionSite>ZB_ConstructionSiteBlacksmith1</ConstructionSite>
        </ConstructionInfo>       
		  <Exploration>30</Exploration>
		  <ApproachPos>
            <X>0</X>
            <Y>-500</Y>
           </ApproachPos>
		  <ApproachR>0</ApproachR>
        <DoorPos>
            <X>70</X>
            <Y>100</Y>			
        </DoorPos>
        
        
       <Blocked1>
            <X>-500</X>
            <Y>300</Y>
        </Blocked1>
        <Blocked2>
            <X>400</X>
            <Y>-400</Y>
        </Blocked2>
        <TerrainPos1>
            <X>-600</X>
            <Y>400</Y>
        </TerrainPos1>
        <TerrainPos2>
            <X>500</X>
            <Y>-500</Y>
        </TerrainPos2>
        
        
	</Logic>
	<Behavior>
		  <Logic classname="EGL::CGLEBehaviorProps">
			  <Class>EGL::GLEBehaviorMultiSubAnims</Class>
		</Logic>
		  <Display classname="ED::CBehaviorProps">
			  <Class>ED::CDisplayBehaviorBuildingAnimation</Class>
		</Display>
	</Behavior>
    <Behavior>
        <Logic classname="GGL::CResourceRefinerBehaviorProperties">
            <Class>GGL::CResourceRefinerBehavior</Class>
            <ResourceType>Iron</ResourceType>
            <InitialFactor>4</InitialFactor>
            <SupplierCategory>IronSupplier</SupplierCategory>
        </Logic>
    </Behavior>
    
    

<!--AnSu: I will test if it is better to have all buildings as defender buildings-->
    <Behavior>
		  <Logic classname="GGL::CLimitedAttachmentBehaviorProperties">
			  <Class>GGL::CLimitedAttachmentBehavior</Class>           
            <Attachment>
                <Type>ATTACHMENT_DEFENDER_BUILDING</Type>
                <Limit>10</Limit>
            </Attachment>
		</Logic>		 
	</Behavior>
    
	<Behavior>
		  <Logic classname="EGL::CGLEBehaviorProps">
			  <Class>GGL::CBuildingBehavior</Class>
		</Logic>
		  <Display classname="GD::CBuildingBehaviorProps">
			  <Class>GD::CBuildingBehavior</Class>
			  <Banner>Default</Banner>
			  <NumDamageEffects>14</NumDamageEffects>
			  <NumDestroyEffects>15</NumDestroyEffects>
		</Display>
	</Behavior>
	<Behavior>
		  <Logic classname="EGL::CGLEBehaviorProps">
			  <Class>EGL::CParticleEffectSwitchBehavior</Class>
		</Logic>
		  <Display classname="ED::CBehaviorProps">
			  <Class>ED::CParticleEffectSwitchBehavior</Class>
		</Display>
	</Behavior>
	<Behavior>
		  <Logic classname="EGL::CGLEBehaviorProps">
			  <Class>EGL::CParticleEffectAttachmentBehavior</Class>
		</Logic>
		  <Display classname="ED::CBehaviorProps">
			  <Class>ED::CParticleEffectAttachmentBehavior</Class>
		</Display>
	</Behavior>
	
	<Behavior>
	    <Logic classname="GGL::CDefendableBuildingBehaviorProps">
	        <Class>GGL::CDefendableBuildingBehavior</Class>
	    </Logic>
	</Behavior>



</root>
