		  <WorkTaskList>
		    <Start>TL_BRICKMAKER_WORK3_START</Start> 
		    <Work>TL_BRICKMAKER_WORK3</Work> 
		</WorkTaskList>
		  <WorkTaskList>
		    <Start>TL_BRICKMAKER_WORK4_START</Start> 
		    <Work>TL_BRICKMAKER_WORK4</Work> 
		</WorkTaskList>
		  <WorkTaskList>
		    <Start>TL_BRICKMAKER_WORK_INSIDE_START</Start> 
		    <Work>TL_BRICKMAKER_WORK_INSIDE</Work> 
		</WorkTaskList>
		  <Upgrade>
            <Category>Brickworks</Category>
        </Upgrade>
		  <Exploration>30</Exploration>
        <ConstructionInfo>
            
            <BuilderSlot>
                <Position>
                    <X>100</X>
                    <Y>-700</Y>
                </Position>
                <Orientation>90</Orientation>
            </BuilderSlot>
            <BuilderSlot>
                <Position>
                    <X>-100</X>
                    <Y>-700</Y>
                </Position>
                <Orientation>90</Orientation>
            </BuilderSlot>
            <BuilderSlot>
                <Position>
                    <X>-600</X>
                    <Y>-300</Y>
                </Position>
                <Orientation>0</Orientation>
            </BuilderSlot>            
            
            <BuilderSlot>
                <Position>
                    <X>-600</X>
                    <Y>300</Y>
                </Position>
                <Orientation>0</Orientation>
            </BuilderSlot>
            <ConstructionSite>ZB_ConstructionSiteMint1</ConstructionSite>
        </ConstructionInfo>
        <ApproachPos>
            <X>-600</X>
            <Y>100</Y>
        </ApproachPos>
		  <ApproachR>0</ApproachR>
        <DoorPos>
            <X>200</X>
            <Y>100</Y>			
        </DoorPos>
        <Blocked1>
            <X>-500</X>
            <Y>460</Y>
        </Blocked1>
        <Blocked2>
            <X>250</X>
            <Y>-550</Y>
        </Blocked2>
        <TerrainPos1>
            <X>-600</X>
            <Y>560</Y>
        </TerrainPos1>
        <TerrainPos2>
            <X>350</X>
            <Y>-650</Y>
        </TerrainPos2>        
	</Logic>
	<Behavior>
		  <Logic classname="EGL::CGLEBehaviorProps">
			  <Class>EGL::GLEBehaviorMultiSubAnims</Class>
		</Logic>
		  <Display classname="ED::CBehaviorProps">
			  <Class>ED::CDisplayBehaviorBuildingAnimation</Class>
		</Display>
	</Behavior>
    <Behavior>
        <Logic classname="GGL::CResourceRefinerBehaviorProperties">
            <Class>GGL::CResourceRefinerBehavior</Class>
            <ResourceType>Clay</ResourceType>
            <InitialFactor>4</InitialFactor>
            <SupplierCategory>ClaySupplier</SupplierCategory>
            
        </Logic>
    </Behavior>
    
    <!--AnSu: I will test if it is better to have all buildings as defender buildings-->
    <Behavior>
		  <Logic classname="GGL::CLimitedAttachmentBehaviorProperties">
			  <Class>GGL::CLimitedAttachmentBehavior</Class>           
            <Attachment>
                <Type>ATTACHMENT_DEFENDER_BUILDING</Type>
                <Limit>10</Limit>
            </Attachment>
		</Logic>		 
	</Behavior>
    
	<Behavior>
		  <Logic classname="EGL::CGLEBehaviorProps">
			  <Class>GGL::CBuildingBehavior</Class>
		</Logic>
		  <Display classname="GD::CBuildingBehaviorProps">
			  <Class>GD::CBuildingBehavior</Class>
			  <Banner>Default</Banner>
			  <NumDamageEffects>14</NumDamageEffects>
			  <NumDestroyEffects>20</NumDestroyEffects>
		</Display>
	</Behavior>
	
	<Behavior>
	    <Logic classname="GGL::CDefendableBuildingBehaviorProps">
	        <Class>GGL::CDefendableBuildingBehavior</Class>
	    </Logic>
	</Behavior>



