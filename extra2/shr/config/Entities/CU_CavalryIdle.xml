<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<root>
	<Display classname="ED::CDisplayEntityProps">
		<Class>GD::CDisplaySettler</Class>
		<Model>CU_CavalryIdle</Model>
		<DrawPlayerColor>True</DrawPlayerColor>
		<Anim>PU_LeaderCavalry4_Run1</Anim>
		<Anim>PU_LeaderCavalry4_Idle1</Anim>
		<Anim>PU_LeaderCavalry4_Idle2</Anim>
		<Anim>PU_LeaderCavalry4_Idle3</Anim>
		<Anim>PU_LeaderCavalry4_Idle4</Anim>
		<Anim>PU_LeaderCavalry4_Idle5</Anim>
		<Anim>PU_LeaderCavalry4_Idle6</Anim>
		<Anim>PU_LeaderCavalry4_Dying1</Anim>
		<Anim>PU_LeaderCavalry4_Hit</Anim>

	</Display>
	<Logic classname="GGL::CGLSettlerProps">
		<Class>GGL::CSettler</Class>
		<AccessCategory>AccessCategorySettler</AccessCategory>
		<MaxHealth>200</MaxHealth>
		<NeedsPlayer>true</NeedsPlayer>
		<ForceNoPlayer>false</ForceNoPlayer>
		<AdjustWalkAnimSpeed>true</AdjustWalkAnimSpeed>
		<Exploration>29</Exploration>
		<IdleTaskList>TL_NPC_IDLE</IdleTaskList>
		<ArmorClass>ArmorClassIron</ArmorClass>
		<ArmorAmount>6</ArmorAmount>
		<Convertible>false</Convertible>
		<Fearless>true</Fearless>
		<Category>Serf</Category>

		<!--Armor modifier-->
		<ModifyArmor>
			<Technology>T_LeatherMailArmor</Technology>
		</ModifyArmor>

		<ModifyArmor>
			<Technology>T_ChainMailArmor</Technology>
		</ModifyArmor>

		<ModifyArmor>
			<Technology>T_PlateMailArmor</Technology>
		</ModifyArmor>

		<!-- Speed Modifier-->
		<ModifySpeed>
			<Technology>T_Shoeing</Technology>
		</ModifySpeed>
	</Logic>
	<Behavior>
		<Logic classname="GGL::CGLAnimationBehaviorExProps">
			<Class>GGL::CGLBehaviorAnimationEx</Class>
			<SuspensionAnimation>PU_LeaderCavalry4_Idle1</SuspensionAnimation>
			<AnimSet>SET_LEADERHEAVYCAVALRY2</AnimSet>
		</Logic>
		<Display classname="ED::CBehaviorProps">
			<Class>ED::CDisplayBehaviorAnimation</Class>
		</Display>
	</Behavior>
	<Behavior>
		<Logic classname="EGL::CMovementBehaviorProps">
			<Class>GGL::CLeaderMovement</Class>
			<Speed>500</Speed>
			<RotationSpeed>30</RotationSpeed>
			<MoveTaskList>TL_LEADER_WALK</MoveTaskList>
			<MoveIdleAnim>PU_LeaderCavalry4_Idle1</MoveIdleAnim>
		</Logic>
		<Display classname="ED::CBehaviorProps">
			<Class>ED::CDisplayBehaviorMovement</Class>
		</Display>
	</Behavior>

	<Behavior>
		<Logic classname="GGL::CReplaceableEntityBehaviorProperties">
			<Class>GGL::CReplaceableEntityBehavior</Class>
			<EntityType>XD_DroppedAxeShield</EntityType>
		</Logic>
	</Behavior>
	
	<Behavior>
		<Logic classname="EGL::CGLEBehaviorProps">
			<Class>GGL::CBehaviorWalkCommand</Class>
		</Logic>
	</Behavior>

	<Behavior>
		<Logic classname="GGL::CGLBehaviorPropsDying">
			<Class>GGL::CGLBehaviorDying</Class>
			<DyingTaskList>TL_DIE</DyingTaskList>
		</Logic>
	</Behavior>


	<Behavior>
		<Logic classname="GGL::CSerfBehaviorProps">
			<Class>GGL::CSerfBehavior</Class>
		</Logic>
	</Behavior>

	<Behavior>
		<Logic classname="GGL::CSerfBattleBehaviorProps">
			<Class>GGL::CSerfBattleBehavior</Class>
		</Logic>
	</Behavior>

	<Behavior>
		<Logic classname="EGL::CGLEBehaviorProps">
			<Class>GGL::CWorkerEvadeBehavior</Class>
		</Logic>
	</Behavior>

	<Behavior>
		<Logic classname="GGL::CEvadeExecutionBehaviorProps">
			<Class>GGL::CEvadeExecutionBehavior</Class>
			<BasePriority>200</BasePriority>
		</Logic>
	</Behavior>

	<Behavior>
		<Logic classname="GGL::CCamperBehaviorProperties">
			<Class>GGL::CCamperBehavior</Class>
			<Range>5000</Range>
		</Logic>
	</Behavior>
</root>
